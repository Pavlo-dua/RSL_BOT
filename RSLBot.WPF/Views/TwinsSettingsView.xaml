<UserControl x:Class="RSLBot.WPF.Views.TwinsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource MaterialDesignBackground}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel MaxWidth="700">
                
                <!-- Заголовок секції -->
                <materialDesign:Card Background="#FF4CAF50" 
                                     UniformCornerRadius="8" Padding="20,16" Margin="0,0,0,24">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountMultiple" 
                                                Width="32" Height="32" 
                                                VerticalAlignment="Center"
                                                Foreground="White" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Налаштування Твінс" 
                                      FontSize="20" FontWeight="Bold"
                                      Foreground="White"/>
                            <TextBlock Text="Конфігурація автоматичних боїв в підземеллі Твінс" 
                                      FontSize="13" Opacity="0.9"
                                      Foreground="White" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Секція економіки -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0,0,0,20" 
                                    materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel>
                        <Border Background="#E8F5E8" 
                               CornerRadius="10,10,0,0" Padding="16,12">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DiamondStone" 
                                                        Width="24" Height="24" 
                                                        VerticalAlignment="Center"
                                                        Foreground="#2E7D32"/>
                                <TextBlock Text="Економіка та ресурси" 
                                          FontSize="16" FontWeight="SemiBold"
                                          VerticalAlignment="Center" Margin="12,0,0,0"
                                          Foreground="#2E7D32"/>
                            </StackPanel>
                        </Border>
                        <Border Padding="10" Background="{DynamicResource MaterialDesignPaper}">
                            <StackPanel>
                                <CheckBox x:Name="BuyTokensCheckBox"
                                          IsChecked="{Binding Settings.BuyTokensWithGems}"
                                          Style="{StaticResource MaterialDesignDarkCheckBox}"
                                          FontSize="14" FontWeight="DemiBold">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CurrencyUsd" 
                                                                Width="18" Height="18" 
                                                                VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Купувати мішечки за рубіни" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </CheckBox>

                                <Border Background="{DynamicResource MaterialDesignSelection}" 
                                       CornerRadius="6" Padding="16,12" Margin="0,16,0,0"
                                       Visibility="{Binding IsChecked, ElementName=BuyTokensCheckBox, 
                                                   Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Кількість покупок"
                                                 Text="{Binding Settings.TokenPurchases}"
                                                 FontSize="14" Margin="0,0,0,8"/>
                                        
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="InformationOutline" 
                                                                    Width="16" Height="16"
                                                                    VerticalAlignment="Center" 
                                                                    Foreground="#4CAF50"/>
                                            <TextBlock Text="Введіть 0 для необмеженої кількості покупок" 
                                                      FontSize="12" Opacity="0.7" Margin="8,0,0,0"
                                                      TextWrapping="Wrap" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Секція стратегії бою -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0,0,0,20"
                                    materialDesign:ElevationAssist.Elevation="Dp4">
                    
                        <StackPanel>
                            <Border Background="#E8F5E8" 
                                   CornerRadius="10,10,0,0" Padding="16,12">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ShieldAlert" 
                                                            Width="24" Height="24" 
                                                            VerticalAlignment="Center"
                                                            Foreground="#2E7D32"/>
                                    <TextBlock Text="Стратегія та поведінка" 
                                              FontSize="16" FontWeight="SemiBold"
                                              VerticalAlignment="Center" Margin="12,0,0,0"
                                              Foreground="#2E7D32"/>
                                </StackPanel>
                            </Border>
                            <Border Padding="10" Background="{DynamicResource MaterialDesignPaper}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <materialDesign:PackIcon Kind="ShieldAlert" 
                                                            Width="18" Height="18"
                                                            VerticalAlignment="Top" Margin="0,2,0,0"
                                                            Foreground="#FF9800"/>
                                    <TextBlock Text="Налаштування максимальної кількості поразок" 
                                              FontSize="13" Opacity="0.8" Margin="10,0,0,0"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Максимальна кількість поразок"
                                         Text="{Binding Settings.MaxDefeat}"
                                         FontSize="14" Margin="0,12,0,8"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="InformationOutline" 
                                                            Width="16" Height="16"
                                                            VerticalAlignment="Center" 
                                                            Foreground="#4CAF50"/>
                                    <TextBlock Text="Введіть -1 для необмеженої кількості поразок" 
                                              FontSize="12" Opacity="0.7" Margin="8,0,0,0"
                                              TextWrapping="Wrap" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            </Border>
                        </StackPanel>
                 
                </materialDesign:Card>

                <!-- Панель дій -->
                <materialDesign:Card UniformCornerRadius="10" Padding="24,20"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    Background="{DynamicResource MaterialDesignLightSeparatorBackground}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#4CAF50" 
                               CornerRadius="50" Width="50" Height="50"
                               VerticalAlignment="Center" Margin="0,0,20,0">
                            <materialDesign:PackIcon Kind="AccountMultiple" 
                                                    Width="28" Height="28"
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"
                                                    Foreground="White"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Готові розпочати?" 
                                      FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Запустіть автоматичний сценарій боїв в підземеллі Твінс" 
                                      FontSize="13" Opacity="0.7" Margin="0,0,0,12"/>
                            
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding RunScenarioCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Height="42" Padding="24,0"
                                        materialDesign:ButtonAssist.CornerRadius="21"
                                        materialDesign:ElevationAssist.Elevation="Dp3">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PlayCircle" 
                                                                Width="22" Height="22"
                                                                VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="Запустити сценарій" 
                                                    FontSize="14" FontWeight="Medium"
                                                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding CancelScenarioCommand}" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Height="42" Padding="24,0"
                                        Margin="16,0,0,0"
                                        materialDesign:ButtonAssist.CornerRadius="21">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Cancel" 
                                                                Width="22" Height="22"
                                                                VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="Скасувати" 
                                                    FontSize="14" FontWeight="Medium"
                                                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

